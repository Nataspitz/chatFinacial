{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-electron",
    "rootDir": "electron",
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["**/*.test.ts", "node_modules", "dist", "dist-electron"]
}

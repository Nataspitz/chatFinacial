{
  "name": "chatfinacial",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop app base with Electron + React + Vite + TypeScript",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k -n WEB,ELECTRON,APP -c cyan,magenta,green \"npm:dev:web\" \"npm:dev:electron\" \"npm:dev:app\"",
    "dev:web": "vite --host",
    "dev:renderer": "npm run dev:web",
    "dev:electron": "tsc -p tsconfig.electron.json --watch",
    "dev:app": "wait-on tcp:5173 file:dist-electron/main.js && electron dist-electron/main.js",
    "build": "vite build",
    "build:web": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron:build": "npm run build && npm run build:electron && electron-builder --config electron-builder.json",
    "preview": "vite preview",
    "test": "jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "axios": "1.13.5",
    "better-sqlite3": "12.6.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-icons": "^5.5.0",
    "react-router-dom": "7.13.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "concurrently": "9.2.1",
    "electron": "40.6.0",
    "electron-builder": "26.8.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "9.0.4"
  }
}
